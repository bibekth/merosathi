<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:padding="8dp"
    tools:context=".RegisterActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvAllRights"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                android:layout_marginHorizontal="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="LOGO" />

            <TextView
                android:id="@+id/tvFillForm"
                android:text="Fill the form to register your account."
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:paddingHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etName"
                android:hint="Name"
                android:autofillHints="name"
                android:inputType="textPersonName"
                android:layout_marginTop="24dp"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/input_shape"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvNameError"
                android:textSize="14sp"
                android:textColor="@color/error_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etUserName"
                android:hint="Username"
                android:autofillHints="username"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/input_shape"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvUserNameError"
                android:textSize="14sp"
                android:textColor="@color/error_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:hint="Email"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/input_shape"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvEmailError"
                android:textSize="14sp"
                android:textColor="@color/error_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etContact"
                android:hint="Contact"
                android:autofillHints="phone"
                android:inputType="number"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/input_shape"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvContactError"
                android:textSize="14sp"
                android:textColor="@color/error_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDateOfBirth"
                android:hint="Date of Birth"
                android:layout_marginTop="16dp"
                android:paddingTop="12dp"
                android:textSize="18sp"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/input_shape"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvDateOfBirthError"
                android:textSize="14sp"
                android:textColor="@color/error_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/button_shape"
                android:textColor="@color/off_white"
                android:text="Register"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginVertical="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAlreadyHaveAccount"
                    android:text="Already have an account? "
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLogin"
                    android:text="Login"
                    android:textColor="@color/link"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvAllRights"
        android:gravity="center"
        android:text="All rights are reserved to Mero Sathi"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>